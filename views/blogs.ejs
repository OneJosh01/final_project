      <script>
       let logout_button = document.querySelector("#logoutButton")
       logout_button.addEventListener("click", function (){
        const tokenName = 'loginToken';
    
        // Set the cookie's expiration date to the past to delete it
        document.cookie = `${tokenName}=; expires=Thu, 01 Jan 1970 00:00:00 UTC; path=/;`;
        location.href = '/login'
       })
